{% extends "layout.twig" %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="alert {{ level_name|alertClass }}">
                <i class="fa {{ level_name|alertIconClass }}"></i> {{ level_name }}:
                {{ message|slice(0, 50) }}
                <small>
                    {{ (datetime.date ~ ' ' ~ datetime.timezone)|time_diff }}
                    | {{ extra.uid }}
                </small>
            </h4>

            <dl class="dl-horizontal">
                <dt>Support Code:</dt>
                <dd><pre>{{ extra.uid }}</pre></dd>

                <dt>Date:</dt>
                <dd><pre>{{ datetime.date }} {{ datetime.timezone ~ "\n" }}{{ (datetime.date ~ ' ' ~ datetime.timezone)|date('Y-m-d H:i:s.u T', 'America/Toronto') }}</pre></dd>

                <dt>Message:</dt>
                <dd><pre>{{ message }}</pre></dd>
            </dl>

            {% if context %}
                <dl class="dl-horizontal">
                    {% for key, value in context %}
                        <dt>{{ key|capitalize }}:</dt>
                        <dd><pre style="{{ key == 'trace' ? 'font-size:11px;' }}">{{ value }}</pre></dd>
                    {% endfor %}
                </dl>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}